<!doctype html>
@{ 
    ViewBag.Jpg = ".jpg";
}
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,900" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/fonts/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <!-- Theme Style -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header role="banner">

        <nav class="navbar navbar-expand-md navbar-dark bg-light navbar-fixed-top">
            <div class="container">
                @Html.ActionLink("Open CourseWare", "Index", "Home", null, new { @class = "navbar-brand absolute" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse navbar-light" id="navbarsExample05">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "nav-link " })
                        </li>
                        @if(Request.IsAuthenticated)
                        {
                            <li class="nav-item">
                            @Html.ActionLink("My Courses", "Index", "MyCourse", null, new { @class = "nav-link " })
                            </li>
                        }
                        @if(Request.IsAuthenticated && ViewBag.Admin >= 1)
                        {
                            <li class="nav-item">
                            @Html.ActionLink("Dashboard", "Dashboard", "Courses", null, new { @class = "nav-link " })
                            </li>
                        }
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link " })
                        </li>
                    </ul>
                        @Html.Partial("_LoginPartial")

                </div>
            </div>
        </nav>
    </header>
    <!-- END header -->

    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url(/images/@ViewBag.Img@ViewBag.Jpg);">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-8 text-center">
                    <div class="mb-5 element-animate">
                        <h1>@ViewBag.Desc</h1>
                        <p class="lead">@ViewBag.SubDesc</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END section -->

    <div>
        @RenderBody()
    </div>

    <footer class="site-footer" style="background-image: url('/images/big_image_3.jpg');">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-4">
                    <h3>Open Courseware</h3>
                    <p>Learn better with us. </p>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
        </div>
    </footer>
    <!-- END footer -->
    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/jquery-migrate-3.0.0.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.waypoints.min.js"></script>
    <script src="/js/jquery.stellar.min.js"></script>

    <script src="/js/main.js"></script>
</body>
@RenderSection("scripts", required: false)
</html>

@model OpenCourseWareProject.Controllers.Course

@{
    Layout = null;
    ViewBag.Title = "Details";
}
<!doctype html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,900" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/fonts/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <!-- Theme Style -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header role="banner">

        <nav class="navbar navbar-expand-md navbar-dark bg-light navbar-fixed-top">
            <div class="container">
                @Html.ActionLink("Open CourseWare", "Index", "Home", null, new { @class = "navbar-brand absolute" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse navbar-light" id="navbarsExample05">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "nav-link " })
                        </li>
                        @if (Request.IsAuthenticated)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("My Courses", "Index", "MyCourse", null, new { @class = "nav-link " })
                            </li>
                        }
                        @if (Request.IsAuthenticated && ViewBag.Admin >= 1)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Dashboard", "Dashboard", "Courses", null, new { @class = "nav-link " })
                            </li>
                        }
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link " })
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")

                </div>
            </div>
        </nav>
    </header>
    <!-- END header -->

    <section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(@Html.DisplayFor(model => model.ImagePath));">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-12">
                    <div class="mb-5 element-animate">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h1 class="mb-0">@Html.DisplayFor(model => model.CourseTitle)</h1>
                                <p>@Html.DisplayFor(model => model.Instructor)</p>
                                <p class="lead mb-5">Learn the basics of @Html.DisplayFor(model => model.CourseTitle).</p>

                                <p>
                                    @if(ViewBag.Added)
                                    {
                                        <a href=@Url.Action("Remove", new { @id = @Html.DisplayFor(model => model.CId)}) class="btn btn-primary mr-2" style="background-color:red">Remove from your courses.</a>
                                    }
                                    else
                                    {
                                        <a href=@Url.Action("Add", new { @id = @Html.DisplayFor(model => model.CId)}) class="btn btn-primary mr-2">Add to your courses.</a>
                                    }
                            </div>
                            <div class="col-md-4">
                                <img src="@Html.DisplayFor(model => model.ImagePath)" alt="Image placeholder" class="img-fluid" onerror="this.src='/images/default.jpg'">
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>
    <!-- END section -->
    <section class="site-section episodes">
        <div class="container">
            <div class="row bg-light align-items-center p-4 episode">
                <div class="col-md-3">
                    <span class="episode-number">1</span>
                </div>
                <div class="col-md-9">
                    <h2><a href="@Url.Action("Index", "Materials", new { @id = Html.DisplayFor(model => model.CId), @type = "Assignments"})">Assignments</a></h2>
                    <p>All the assignments related to this course.</p>
                </div>
            </div>
            <div class="row align-items-center p-4 episode">
                <div class="col-md-3">
                    <span class="episode-number">2</span>
                </div>
                <div class="col-md-9">
                    <h2><a href="@Url.Action("Index", "Materials", new { @id = Html.DisplayFor(model => model.CId), @type = "Notes"})">Notes</a></h2>
                    <p>All the notes related to this course.</p>
                </div>
            </div>
            <div class="row bg-light align-items-center p-4 episode">
                <div class="col-md-3">
                    <span class="episode-number">3</span>
                </div>
                <div class="col-md-9">
                    <h2><a href="@Url.Action("Index", "Materials", new { @id = Html.DisplayFor(model => model.CId), @type = "PastPapers"})">Past papers</a></h2>
                    <p>All the papers related to this course.</p>
                </div>
            </div>
            <div class="row align-items-center p-4 episode">
                <div class="col-md-3">
                    <span class="episode-number">4</span>
                </div>
                <div class="col-md-9">
                    <h2><a href="@Url.Action("Index", "Materials", new { @id = Html.DisplayFor(model => model.CId), @type = "Readings"})">Readings</a></h2>
                    <p>All the readings related to this course.</p>
                </div>
            </div>
        </div>
    </section>



    <section class="section-cover bg-dark" style="height:200px">
        <div class="container" style="height:100%">
            <div class="row justify-content-center align-items-center intro" style="height:100px">
                <div class="col-md-7 text-center element-animate" style="padding-top:100px">
                    <h2>Open CourseWare.</h2>
                    <p class="lead mb-5" style="height:0px">Putting together the pieces.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- END footer -->
    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/jquery-migrate-3.0.0.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.waypoints.min.js"></script>
    <script src="/js/jquery.stellar.min.js"></script>

    <script src="/js/main.js"></script>
</body>
</html>
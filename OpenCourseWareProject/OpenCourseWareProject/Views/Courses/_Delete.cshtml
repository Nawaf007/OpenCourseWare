@model OpenCourseWareProject.Controllers.Course
<div>
    <br />
    <h4 style="text-align:center">Course Details</h4>
    <p class="control-label col-md-12">Are you sure you want to delete this?</p>
    <hr />
    <dl class="form-horizontal">
        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.CourseId)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.CourseTitle)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.CourseTitle)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.Department):
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.Department)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.Instructor)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.Instructor)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.AddedBy)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="modal-footer">
            <button type="submit" name="delete" value=@Model.CId.ToString() class="btn btn-primary">
                Delete
            </button>
        </div>
    }
</div>

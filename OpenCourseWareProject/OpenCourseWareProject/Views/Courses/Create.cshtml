@model OpenCourseWareProject.Controllers.Course

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewBag.Title = "Create";
    ViewBag.Desc = "Create Course";
}

@using (Html.BeginForm("Create", "Courses", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <br />
        <h4 style="text-align:center; color: white; font-weight:bold"><b>Create Course</b></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.CourseId, htmlAttributes: new { @class = "control-label col-md-12", style = "color: white; font-weight:bold" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CourseId, new { htmlAttributes = new { @class = "form-control", style = "color: white" } })
                @Html.ValidationMessageFor(model => model.CourseId, "", new { @class = "text-danger", style = "color: white" })
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.CourseTitle, htmlAttributes: new { @class = "control-label col-md-12", style = "color: white; font-weight:bold" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CourseTitle, new { htmlAttributes = new { @class = "form-control", style = "color: white" } })
                @Html.ValidationMessageFor(model => model.CourseTitle, "", new { @class = "text-danger", style = "color: white" })
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "control-label col-md-12", style = "color: white; font-weight:bold" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control", style = "color: white" } })
                @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger", style = "color: white" })
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Instructor, htmlAttributes: new { @class = "control-label col-md-12", style = "color: white; font-weight:bold" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Instructor, new { htmlAttributes = new { @class = "form-control", style = "color: white" } })
                @Html.ValidationMessageFor(model => model.Instructor, "", new { @class = "text-danger", style = "color: white" })
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-12", style = "color: white; font-weight:bold" })
            </div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, OpenCourseWareProject.Controllers.Course.GetStatusList(), htmlAttributes: new { @class = "control-label col-md-4", style = "color:black" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger", style = "color: white" })
            </div>
        </div>
        <div>
            <label for="file" class="control-label col-md-12" style="font-weight:bold; color:white">Upload Image:</label>
            <input type="file" name="file" id="file" class="control-label col-md-12" />
        </div>
        @Html.HiddenFor(model => model.AddedBy)
        @Html.HiddenFor(model => model.ImagePath)

        <br />
        <div class="modal-footer">
            @Html.ActionLink("Cancel", "Table", "Courses", new { @class = "btn btn-secondary" })
            <input type="submit" name="answer" value="Create" class="btn btn-primary" />
        </div>
    </div>
}
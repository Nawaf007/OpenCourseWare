@model OpenCourseWareProject.Controllers.Course
<div>
    <br />
    <h4 style="text-align:center">Course Details</h4>
    <hr />
    <dl class="form-horizontal">
        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.CourseId)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.CourseTitle)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.CourseTitle)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.Department):
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.Department)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.Instructor)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.Instructor)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>

        <dt class="control-label col-md-12">
            @Html.DisplayNameFor(model => model.AddedBy)
        </dt>

        <dd style="text-indent:100px">
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>
        <dd class="col-md-12">
            @Html.ActionLink("Delete", "Delete", "Courses", new { id = Model.CId }, new { @class = "btn btn-primary", style = "padding: 5px 15px" })
            @Html.ActionLink("Material", "Table", "Materials", new { id = Model.CId }, new { @class = "btn btn-primary", style = "padding: 5px 15px; margin-left:25%" })
            @Html.ActionLink("Edit", "Edit", "Courses", new { id = Model.CId }, new { @class = "btn btn-primary", style = "padding: 5px 15px; margin-left:25%" })
        </dd>
    </dl>
</div>